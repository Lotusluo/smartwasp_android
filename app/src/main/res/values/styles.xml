<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smartwasp" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/smartwasp_orange</item>
        <item name="colorPrimaryVariant">@android:color/background_light</item>
        <item name="colorOnPrimary">@color/smartwasp_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/smartwasp_white</item>
        <item name="colorSecondaryVariant">@color/smartwasp_white</item>
        <item name="colorOnSecondary">@color/smartwasp_white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarSize">50dp</item>
        <item name="tabbarSize">58dp</item>
        <item name="toolbarTitleSize">18sp</item>
        <item name="toolbarColor">@color/smartwasp_white</item>
    </style>

    <!-- 全局Toolbar Tittle 颜色与字体大小-->
    <style name="ToolbarTextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <!--快速启动-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/smartwasp_yellow</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Smartwasp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Smartwasp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 弹出框样式 -->
    <style name="CommonWindowStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 底层弹出框样式 -->
    <style name="CommonWindowStyle.BottomSheet">
        <item name="android:backgroundDimAmount">.4</item>
    </style>

<!--    tabbar字体样式-->
    <style name="TabBarTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

<!--    纵向竖线-->
    <style name="vertical_line">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_light</item>
    </style>

<!--    横向竖线-->
    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/dark_light</item>
    </style>


    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>



</resources>
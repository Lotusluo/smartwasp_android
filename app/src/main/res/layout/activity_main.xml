<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="tittle" type="String" />
        <variable name="rightIcon" type="android.graphics.drawable.Drawable" />
        <variable
            name="onclickListener"
            type="android.view.View.OnClickListener" />
    </data>

<!--    视图容器-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

<!--        toobar-->
        <include
            android:id="@+id/toolbar"
            app:tittle="@{tittle}"
            app:rightIcon="@{rightIcon}"
            app:onclickListener="@{onclickListener}"
            layout="@layout/layout_toolbar" />

<!--        toobar1-->
        <LinearLayout
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/toolbarSize"
            android:background="?attr/toolbarColor"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <!--            设备状态图标-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/icon_device_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/abc_btn_radio_to_on_mtrl_000"
                android:backgroundTint="@color/device_status_color"/>

<!--            设备名称-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="-----"
                android:textSize="16sp"
                android:drawableRight="@mipmap/ic_triangle_down"
                android:textColor="@color/device_text_color" />

        </LinearLayout>

<!--        tabbar-->
        <include
            android:id="@+id/tabbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/tabbarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:onclickListener="@{onclickListener}"
            layout="@layout/layout_tabbar"/>

<!--        容器-->
        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/tabbar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

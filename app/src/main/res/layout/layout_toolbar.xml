<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="tittle" type="String" />
        <variable name="rightIcon" type="android.graphics.drawable.Drawable" />
        <variable name="leftIcon" type="android.graphics.drawable.Drawable" />
        <variable
            name="onclickListener"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/toolbarSize"
        android:background="?attr/toolbarColor"
        android:gravity="center_vertical">

        <!--    左侧图标-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_left_icon"
            android:src="@{leftIcon}"
            android:scaleType="fitCenter"
            android:onClick="@{onclickListener}"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginLeft="6dp"
            android:tint="@color/smartwasp_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <!--    标题-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbar_title"
            android:text="@{tittle}"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="?attr/toolbarTitleSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!--    右侧图标-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_right_icon"
            android:src="@{rightIcon}"
            android:scaleType="fitCenter"
            android:onClick="@{onclickListener}"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>


</layout>